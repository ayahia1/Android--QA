<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">

    <ImageView
        android:id="@+id/cacel_icn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_cancel_btn" />

    <EditText
        android:id="@+id/Question_view"
        android:layout_width = "380dp"
        android:layout_height="50dp"
        android:text = ""
        android:hint = "Enter the Question"
        android:layout_marginTop = "20dp"
        android:layout_centerHorizontal = "true"
        />

    <EditText
        android:id="@+id/Answer_view"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/Question_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-157dp"
        android:hint="Enter the Answer"
        android:text = "" />

    <ImageView
        android:id="@+id/save_icn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_save_icn" />


</RelativeLayout>
