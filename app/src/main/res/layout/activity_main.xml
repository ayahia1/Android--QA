<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:text="Who is the 44th President of the United States?"
        android:textSize="40sp"
        android:background="@drawable/round_rec"
        android:layout_margin = "10dp"
        android:elevation = "5dp"
        />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/flashcard_question"
        android:layout_marginTop="-214dp"
        android:background="@color/yellow"
        android:gravity="center"
        android:text="Barack Obama"
        android:textSize="40sp"
        android:visibility = "invisible"
        />

    <TextView
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below = "@+id/flashcard_question"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop = "90dp"
        android:layout_marginLeft = "10dp"
        android:layout_marginRight = "10dp"
        android:gravity = "center"
        android:background = "#ffe3a2"
        android:textSize = "25dp"
        android:textColor = "#4f5bd5"
        android:visibility="invisible"
        android:text = "Bill Clinton" />

    <TextView
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/option1"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop = "30dp"
        android:layout_marginLeft = "10dp"
        android:layout_marginRight = "10dp"
        android:gravity = "center"
        android:background = "#ffe3a2"
        android:textSize = "25dp"
        android:textColor = "#4f5bd5"
        android:visibility="invisible"
        android:text = "George H. W. Bush" />

    <TextView
        android:id = "@+id/option3"
        android:layout_width = "match_parent"
        android:layout_height = "50dp"
        android:layout_below="@+id/option2"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop = "30dp"
        android:layout_marginLeft = "10dp"
        android:layout_marginRight = "10dp"
        android:gravity = "center"
        android:background = "#ffe3a2"
        android:textColor = "#4f5bd5"
        android:textSize = "25dp"
        android:visibility="invisible"
        android:text="Barack Obama" />

    <ImageView
        android:id="@+id/off_eye"
        android:layout_width = "20dp"
        android:layout_height = "20dp"
        android:src="@drawable/ic_on"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/on_eye"
        android:layout_width = "20dp"
        android:layout_height = "20dp"
        android:src="@drawable/ic_off"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        />

    <ImageView
        android:id="@+id/add_icn"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:src = "@drawable/ic_add_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft = "30dp"
        />

    <ImageView
        android:id = "@+id/next_icn"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignParentRight = "true"
        android:layout_alignParentBottom = "true"
        android:layout_marginRight = "30dp"
        android:layout_marginBottom = "30dp"
        android:src = "@drawable/ic_next" />

    <ImageView
        android:id="@+id/trash"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:src = "@drawable/ic_trash"
        android:layout_below = "@id/flashcard_question"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop = "20dp"
        />

</RelativeLayout>
